<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="supertetris.supertetris" >

    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:name="supertetris.supertetris.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="supertetris.supertetris.Tetris"
            android:label="@string/title_activity_tetris"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="supertetris.supertetris.Preferencias"
            android:label="@string/title_activity_preferencias" >
        </activity>
    </application>

</manifest>
